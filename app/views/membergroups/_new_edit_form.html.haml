= simple_form_for @membergroup, defaults:{label:false} do |f|
  %div{:class => "row"}
    %div{:class => "left"}
      = f.label "name", "Nimi"
    %div{:class => "left right_field"}
      = f.input :name
  %div{:class => "row"}
    %div{:class => "left"}
      = f.label "fee", "Jäsenmaksu (€)"
    %div{:class => "left right_field"}
      = f.input :fee
  %div{:class => "row"}
    %div{:class => "left"}
      = f.label "onetimefee", "Kertamaksu"
    %div{:class => "left right_field"}
      = f.input :onetimefee
  %div{:class => "clear"}
  %div{:class => "left"}
    = f.submit @submit_text, id:"update"
  %div{:class => "clear"}