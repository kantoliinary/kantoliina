!!!
%html
  %head
  %title Kantoliina
  -#= favicon_link_tag '/favicon.ico'
  = stylesheet_link_tag "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  %div{:id => "header"}
    %div{:id => "header-content"}

      %h1{:id => "logo"}
        %a{:title => "", :href => "./"}
          KANTOLIINA<span class="green">YHDISTYS</span>
      %img{:src => "/assets/logo.gif", :height => "100", :align => "right"}
      -if @admin
        %ul{:class => "dropdown"}
          %li
            = link_to "Listaa jäsenet", members_path
          %li
            = link_to "Lisää jäsen", new_member_path
          %li
            = link_to "Hallitse tunnuksia", accountcontrols_path
          %li
            = link_to "Asetukset"
            %ul{:class => "sub_menu"}
              %li
                = link_to "Laskupohja", settings_path
              %li
                = link_to "Jäsenryhmät", membergroups_path
          %li
            = link_to "Kirjaudu ulos", logout_path


  = yield
