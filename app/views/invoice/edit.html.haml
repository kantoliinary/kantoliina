%div{:id => "invoice_editor_page"}

  -#%h1 Laskupohjan muokkaus
  = flash[:notice]

  %div{:id => "invoice_template_editor"}
    %div{:class => "error"}
      = @error

    = form_tag invoice_path, :method => "put", :id => "invoice_template_form" do
      = hidden_field_tag "function"


      %div{:id => "textarea"}
        = text_area_tag "template", @template, :class => "lined"

      %div{:id => "invoice_template_button"}

    = button_tag "Tallenna",:id => "save"


    %div
      %a{:href => invoice_loaddefault_path}
        = button_tag "Palauta oletuspohja", :id => "load_default"
      = button_tag "Esikatsele", :id => "preview"

    %div{:id => "preview-view"}
      = flash[:preview]
  :javascript
    $(document).ready(function(){
      $(".lined").linedtextarea({selectedLine:#{@errorline}})
    })

