%div{:id => "settings_page"}

  %h1 Laskupohjan muokkaus
  = flash[:notice]
  %li
    = link_to "Muokkaa Maksumuistutuspohjaa", settings_path(:temp => 2)
  %li
    = link_to "Muokkaa Laskupohjaa", settings_path
  %div{:id => "invoice_template_editor"}
    %div{:class => "error"}
      = @error
    = form_tag settings_path, :method => "put" do

      %div{:id => "textarea"}
        = text_area_tag "template", @template, :class => "lined"
        = hidden_field_tag :temp, params[:temp]
      %div{:id => "invoice_template_button"}
        = submit_tag "Tallenna"
      = button_to "Esikatsele", settings_path
    %a{:href => "settings/loaddefault"}
      = button_tag "lataa alkuperäinen laskupohja", :id => "load_default"


    %h3 Esikatselunäkymä
    %div{:id => "textlook"}
      = text_area_tag "template2", @template, :class => "lined", :readonly => true
      = hidden_field_tag :temp, params[:temp]

  :javascript
    $(document).ready(function(){
      $(".lined").linedtextarea({selectedLine:#{@errorline}})
    })
