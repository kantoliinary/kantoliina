%div{id: "login_page"}
  = flash[:error]
  %h1 Kirjaudu sisään
  = @error[:error]
  %div{id: "login_form"}
    = form_tag login_path do
      %div{id: "label"}
        = label_tag 'login', 'Käyttäjätunnus'
      %div{id: "input"}
        = text_field_tag "login"
      %div{id: "label"}
      =label_tag 'password', "Salasana"
      %div{id: "input"}
        = password_field_tag "password"
      = submit_tag "Login", id: "submit"